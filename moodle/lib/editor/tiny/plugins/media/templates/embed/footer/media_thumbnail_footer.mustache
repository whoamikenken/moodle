{{!
    @template tiny_media/embed/footer/media_thumbnail_footer

    Media thumbnail preview footer template.

    Example context (json):
    {

    }

}}
<div class="row" id="tiny-media-thumbnail-preview-footer">
    <div class="col-md-6 d-flex align-items-center p-0">
        <span class="tiny_media_filename text-truncate me-1"></span>
    </div>
    <div class="col-md-6 text-end mt-2 mt-md-0 p-0">
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel, moodle {{/str}}</button>
        <button class="btn btn-primary" data-action="set-poster">{{#str}} next, tiny_media {{/str}}</button>
    </div>
</div>
